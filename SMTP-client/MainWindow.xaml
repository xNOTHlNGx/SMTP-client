<Window x:Class="SmtpClientApp.MainWindow"        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        Title="SMTP Client" Height="450" Width="450"        MinHeight="450"        MinWidth="450">    <Grid Margin="10,0,10,0" Height="417">        <GroupBox Header="SMTP Setup" Margin="0,10,0,314">            <StackPanel Height="68">                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">                    <TextBlock Text="Hostname:" VerticalAlignment="Center"/>                    <TextBox x:Name="HostnameTextBox" Width="200" Margin="5,0"/>                    <TextBlock Text="Port:" VerticalAlignment="Center" Margin="10,0,0,0"/>                    <TextBox x:Name="PortTextBox" Width="52" Margin="5,0"/>                </StackPanel>                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">                    <TextBlock Text="Username:" VerticalAlignment="Center" Margin="0,0,5,0"/>                    <TextBox x:Name="UsernameTextBox" Width="200" Margin="1,0,10,0"/>                    <CheckBox x:Name="AuthCheckBox" Content="Use SMTP Auth" Margin="5,0,0,0"                     Checked="AuthCheckBox_Checked" Unchecked="AuthCheckBox_Unchecked"/>                </StackPanel>                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">                    <TextBlock Text="Password:" VerticalAlignment="Center" Margin="0,0,5,0"/>                    <PasswordBox x:Name="PasswordBox" Width="200" Margin="5,0,10,0"/>                    <CheckBox x:Name="TlsCheckBox" Content="Use TLS" Margin="5,0,0,0"/>                </StackPanel>            </StackPanel>        </GroupBox>        <GroupBox Header="Email" VerticalAlignment="Top" Margin="0,110,0,0" Height="261">            <StackPanel>                <StackPanel Orientation="Vertical">                    <TextBlock Text="From:"/>                    <TextBox x:Name="FromTextBox" Margin="0,0,0,5"/>                    <TextBlock Text="To:"/>                    <TextBox x:Name="ToTextBox" Margin="0,0,0,5"/>                    <TextBlock Text="Subject:"/>                    <TextBox x:Name="SubjectTextBox" Margin="0,0,0,5"/>                    <TextBlock Text="Body:"/>                    <TextBox x:Name="BodyTextBox" Height="100" Margin="0,0,0,5" AcceptsReturn="True"/>                </StackPanel>            </StackPanel>        </GroupBox>        <Button Content="Send Email" Height="30" VerticalAlignment="Top" Click="SendEmail_Click" RenderTransformOrigin="0.51,-0.267" Margin="165,377,165,0" Width="NaN"/>    </Grid></Window>